@model IEnumerable<ExpenseTracker.ViewModels.Expenses.ExpenseListViewModel>

@{
    ViewData["Title"] = "My Expenses";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>

    <div class="btn-group">
        <a class="btn btn-outline-secondary"
           asp-controller="Expenses"
           asp-action="Statistics">
            Total Statistics
        </a>

        <a class="btn btn-primary"
           asp-controller="Expenses"
           asp-action="Create">
            Add New Expense
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <p>No expenses recorded yet.</p>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Category</th>
            <th class="text-end">Amount (лв.)</th>
            <th>Description</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Date.ToShortDateString()</td>
                <td>@e.CategoryName</td>
                <td class="text-end">@e.Amount.ToString("F2") лв.</td>
                <td>@e.Description</td>
                <td class="text-end">
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Edit"
                           asp-route-id="@e.Id"
                           class="btn btn-outline-secondary">
                            Edit
                        </a>
                        <form asp-action="Delete"
                              asp-route-id="@e.Id"
                              method="post"
                              class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this expense?');">
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
}
